<Page x:Class="xiaomiNoteExporter.Gui.Pages.ParsePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:xiaomiNoteExporter.Gui.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ParsePage" Background="White" Loaded="Page_Loaded" Unloaded="Page_Unloaded">
    <Grid VerticalAlignment="Center">
        <StackPanel>
            <TextBlock Text="{Binding ProgressText, StringFormat={}Parsed: {0}}" FontSize="18" TextAlignment="Center" Margin="0, 0, 0, 20" />
            <ProgressBar x:Name="ExportProgress" Maximum="{Binding Total}" Value="{Binding Current}" Height="30" Margin="80, 0, 80, 20" />
            <Button x:Name="StopButton" Content="Stop exporting" HorizontalAlignment="Center" Padding="10" FontSize="16" Click="Button_Click" />
        </StackPanel>
    </Grid>
</Page>
