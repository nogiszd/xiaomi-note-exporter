<Page x:Class="xiaomiNoteExporter.Gui.Pages.SignInPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:xiaomiNoteExporter.Gui.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SignInPage" Background="White" Loaded="Page_Loaded" Unloaded="Page_Unloaded">
    <Page.Content>
        <Grid>
            <TextBlock TextAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,50" FontSize="16">
                Please sign into your Mi Cloud account
                <LineBreak />
                Then press button below to start exporting...
            </TextBlock>
            <Button 
                VerticalAlignment="Bottom" 
                HorizontalAlignment="Center"
                Padding="20,0"
                Margin="0,0,0,50"
                MinHeight="40"
                FontSize="18" Click="Button_Click">
                Start exporting
            </Button>
        </Grid>
    </Page.Content>
</Page>
