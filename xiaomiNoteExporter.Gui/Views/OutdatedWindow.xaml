<Window x:Class="xiaomiNoteExporter.Gui.Views.OutdatedWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:xiaomiNoteExporter.Gui.Views"
        mc:Ignorable="d"
        Title="{Binding WindowTitle, Mode=OneWay}" Height="450" Width="450" ResizeMode="CanMinimize" Closed="Window_Closed">
    <Grid>
        <Image Width="100" Height="100" Source="/Assets/update-icon.png" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,40,0,0"/>
        <Grid VerticalAlignment="Center">
            <TextBlock Text="A newer version is available!" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="24" FontWeight="Bold" />
            <TextBlock HorizontalAlignment="Center" Text="{Binding NewerVersion, StringFormat={}Version {0} is available}" VerticalAlignment="Top" Margin="0,40,0,0" FontSize="16" />
        </Grid>
        <Button Content="Download" HorizontalAlignment="Center" Margin="0,0,0,40" VerticalAlignment="Bottom" Padding="12" MinWidth="200" FontSize="16" Click="Button_Click" />
    </Grid>
</Window>
