<Window x:Class="xiaomiNoteExporter.Gui.Views.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:xiaomiNoteExporter.Gui.Views"
        mc:Ignorable="d"
        Title="{Binding WindowTitle, Mode=OneWay}" Height="250" Width="500" ResizeMode="NoResize" Closed="Window_Closed" Initialized="Window_Initialized">
    <Grid>
        <ProgressBar x:Name="UpdateProgress" IsIndeterminate="True" HorizontalAlignment="Center" Height="22" Margin="0,120,0,0" VerticalAlignment="Top" Width="280"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,60,0,0" TextWrapping="Wrap" Text="Checking for updates..." VerticalAlignment="Top" FontSize="18"/>
    </Grid>
</Window>
